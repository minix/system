<%= link_to "Add New Mac", controller: "home", action: "new" %><br />
<%= form_tag  controller: "home", action: "destroy_more",  method: "get" do |contr| %>
	<% @add_dev.each do |add_dev| %>
		<strong onclick="toggle_visible('divQOTD<%= add_dev.id %>')" ><%= check_box_tag "remove_ids[]", add_dev.id %><%= add_dev.ip_addr %><%= link_to "Edit" , controller: "home", action: "edit", id: add_dev.id %> <%= link_to "Remove" , controller: "home", action: "destroy", method: "delete", id: add_dev.id %></strong><br />
		<ul id="divQOTD<%= add_dev.id %>">
		<% Sys.where("ip_id = #{add_dev.id}").each do |server| %>
			<li>
				<%= server.server %>: <%= server.port %> <%= link_to "Stop" , controller: "home", action: "stop", id: server.id %> <%= link_to "Start" , controller: "home", action: "start", id: server.id %> 
				</li>
				<br />
		<% end %>
		</ul>
	<% end %>
	<%= submit_tag "Remove" %>
<% end %>
