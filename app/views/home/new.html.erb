<%= form_for @add_dev, as: 'add_dev', url: { controller: "home", action: "create" } do |f| %>
	<%= f.label "Ip" %>
	<%= f.text_field :ip_addr %>
	<%= f.fields_for :syss do |i| %>
		<%= i.label "Process" %>
		<%= i.text_field :server %>
		<%= i.label "Port" %>
		<%= i.text_field :port %>
	<% end %>
	<%= f.submit "Submit" %>
<% end %>
